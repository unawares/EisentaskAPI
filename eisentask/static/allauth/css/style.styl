vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args


transition()
  vendor('transition', arguments)


$background-color = #263238
$color-accent = #FFC107


body
  font-weight: 400
  padding: 0
  margin: 0
  background-color: $background-color


.main
  display: flex
  width: 100%
  min-height: 100vh
  justify-content: center

  .content
    width: 60vw
    max-width: 360px
    padding: 16px

    .spacer
      height: 16vw
      max-height: 20vh

    .authentication .auth
      padding-top: 16px
      padding-bottom: 16px

    .header
      .auth-tabs
        list-style-type: none
        margin: 0
        padding: 0
        display: flex
        height: 12vw
        max-height: 80px

        .auth-item
          overflow: hidden
          position: relative
          width: 100%
          height: 100%
          cursor: pointer
          color: $color-accent
          display: inline-flex
          flex-grow: 1
          justify-content: center
          align-items: center

          a
            text-decoration: none
            color: inherit
            display: inline-flex
            width: 100%
            height: 100%
            align-items: center
            justify-content: center

          &:before
            transition all ease 200ms
            z-index: -1
            bottom: -120%
            position: absolute
            width: 100%
            height: 100%
            display: block
            content: ""
            background-color: $color-accent

          &.active
            color: white
            &:before
              bottom: 0

        &:hover
          .auth-item
            color: $color-accent
            &:before
              bottom: -120%

        .auth-item
          &:hover
            color: white
            &:before
              bottom: 0


.button
  color: $color-accent
  border: solid 2px $color-accent
  text-decoration: none
  padding: 8px 25px
  font-size: 2.5vw
  margin:  20px
  border-radius: 30px
  transition: all ease-out 0.15s
  cursor: pointer
  display: inline-block

  @media screen and (min-width: 600px)
    font-size: 16px

  &:hover
    background-color: $color-accent
    color: white


.text-white
  color: white


.text-center
  text-align: center


.text-end
  text-align: right
